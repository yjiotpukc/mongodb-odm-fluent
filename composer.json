{
  "name": "yjiotpukc/mongodb-odm-fluent",
  "description": "A fluent PHP mapping driver for Doctrine MongoDB ODM.",
  "license": "MIT",
  "keywords": [
    "doctrine",
    "laravel",
    "mongodb",
    "odm",
    "data mapper",
    "database",
    "mappings",
    "mapping driver",
    "fluent"
  ],
  "authors": [
    {
      "name": "Vadim Zubko",
      "email": "yjiotpukc@gmail.com"
    }
  ],
  "require": {
    "php": "^7.4|^8.0",
    "doctrine/mongodb-odm": "^2.2.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.5"
  },
  "autoload": {
    "psr-4": {
      "yjiotpukc\\MongoODMFluent\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "yjiotpukc\\MongoODMFluent\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test-unit": "vendor/bin/phpunit --testsuite unit",
    "test-self": "vendor/bin/phpunit --testsuite self",
    "test-split": "vendor/bin/phpunit --testsuite split",
    "test-full": [
      "@generate-expected-metadata",
      "@test-unit",
      "@test-self",
      "@test-split"
    ],
    "coverage-unit": "XDEBUG_MODE=coverage vendor/bin/phpunit --testsuite unit --coverage-clover unit-coverage.xml --coverage-filter src",
    "coverage-self": "XDEBUG_MODE=coverage vendor/bin/phpunit --testsuite self --coverage-clover self-coverage.xml --coverage-filter src",
    "coverage-split": "XDEBUG_MODE=coverage vendor/bin/phpunit --testsuite split --coverage-clover split-coverage.xml --coverage-filter src",
    "coverage-full": [
      "@generate-expected-metadata",
      "@coverage-unit",
      "@coverage-self",
      "@coverage-split"
    ],
    "generate-expected-metadata": "tests/generateExpectedMetadata.php"
  }
}
